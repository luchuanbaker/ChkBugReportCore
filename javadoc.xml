<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc" >

    <target name="javadoc" >

        <javadoc
            access="protected"
            author="true"
            classpath="libs/ddmlib.jar"
            destdir="../ChkBugReport-web/javadoc"
            nodeprecated="false"
            nodeprecatedlist="false"
            noindex="false"
            nonavbar="false"
            notree="false"
            overview="src/overview.html"
            source="1.6"
            sourcepath="src:src-pc:res"
            splitindex="true"
            use="true"
            version="true" />

        <copy
            file="res/javadoc.css"
            overwrite="true"
            tofile="../ChkBugReport-web/javadoc/stylesheet.css" />
    </target>

</project>